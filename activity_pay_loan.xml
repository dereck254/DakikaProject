<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
    android:background="#00B8D4"
android:layout_height="match_parent"
android:padding="16dp">

<TextView
    android:layout_marginTop="30dp"
    android:id="@+id/textViewAmount"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Loan Amount:"
    android:textSize="18sp"
    android:textStyle="bold" />

<EditText
    android:id="@+id/editTextAmount"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/textViewAmount"
    android:layout_marginTop="8dp"
    android:inputType="number" />

<TextView
    android:id="@+id/textViewPhoneNumber"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/editTextAmount"
    android:layout_marginTop="16dp"
    android:text="Phone Number:"
    android:textSize="18sp"
    android:textStyle="bold" />

<EditText
    android:id="@+id/editTextPhoneNumber"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/textViewPhoneNumber"
    android:layout_marginTop="8dp"
    android:inputType="phone" />

<Button
    android:id="@+id/buttonPayNow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/editTextPhoneNumber"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="16dp"
    android:text="Pay Now" />

    <TextView
        android:textColor="#0091EA"
        android:layout_centerHorizontal="true"
        android:layout_width="50dp"
        android:text="OR"
        android:textSize="25sp"
        android:layout_marginTop="265dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

<TextView
    android:id="@+id/textViewPaymentInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/buttonPayNow"
    android:layout_marginTop="50dp"
    android:text="Pay using Till Number:"
    android:textSize="18sp"
    android:textStyle="bold" />

<TextView
    android:id="@+id/textViewProcedure"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/textViewPaymentInfo"
    android:layout_marginTop="8dp"
    android:text="@string/payment_procedure"
    android:textColor="#090909"
    android:textSize="18sp" />

    <Button
        android:background="@color/black"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="630dp"
        android:layout_marginBottom="12dp"
        android:id="@+id/gobackbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back" />

</RelativeLayout>
